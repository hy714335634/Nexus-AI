{
  "name": "Update Tools README",
  "description": "Automatically update tools/system_tools/README_tools.md when Python files in tools/system_tools are modified",
  "trigger": {
    "type": "file_save",
    "patterns": [
      "tools/system_tools/*.py"
    ],
    "exclude": [
      "tools/system_tools/__init__.py",
      "tools/system_tools/README_tools.py"
    ]
  },
  "action": {
    "type": "script",
    "script": "python .kiro/update_tools_readme.py",
    "working_directory": "."
  },
  "enabled": true,
  "auto_execute": true
}