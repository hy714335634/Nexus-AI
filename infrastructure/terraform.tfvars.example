# AWS Configuration
aws_region     = "us-east-1"
aws_access_key = ""  # Leave empty to use default AWS profile
aws_secret_key = ""

# Project Configuration
project_name = "nexus-ai"
environment  = "dev"

# Feature Flags
enable_sqs            = true
enable_dynamodb       = true

# DynamoDB Configuration
dynamodb_read_capacity  = 10
dynamodb_write_capacity = 10

# ALB Configuration
# Whether the ALB should be internal (accessible only from VPC) or internet-facing (accessible from internet)
# Default: true (internal, more secure)
# Set to false for internet-facing ALB (publicly accessible)
# alb_internal = true  # true = internal, false = internet-facing

# ALB Security Group Configuration
# Allowed CIDR blocks for ALB (frontend) access
# Default: VPC CIDR (internal access only)
# For public access, set to: ["0.0.0.0/0"]
# For specific IPs, set to: ["1.2.3.4/32", "5.6.7.8/32"]
# alb_allowed_cidr_blocks = ["0.0.0.0/0"]  # Uncomment for public access

# ============================================
# Bastion Host Configuration
# ============================================
# Enable Bastion Host (EC2 instance for accessing applications)
# enable_bastion = true

# AWS Key Pair name (must already exist in your AWS account)
# You can list existing key pairs with: aws ec2 describe-key-pairs
# bastion_key_name = "your-existing-key-pair-name"

# ============================================
# EC2 API Service Configuration
# ============================================
# Deploy API service on EC2 instead of ECS Fargate
# Required when API needs to build Docker images (Docker-in-Docker)
# api_deploy_on_ec2 = false  # Set to true to enable EC2 deployment

# EC2 instance configuration
# ec2_api_instance_type = "t3.medium"  # Instance type for API service
# ec2_api_desired_capacity = 2  # Desired number of instances
# ec2_api_min_size = 1  # Minimum number of instances
# ec2_api_max_size = 4  # Maximum number of instances
# ec2_api_key_name = ""  # Optional: SSH key pair name for EC2 instances
# ec2_api_volume_size = 50  # Root volume size in GB

# GitHub Configuration (for EC2 deployment)
# github_repo_url = "https://github.com/hy714335634/Nexus-AI.git"  # GitHub repository URL
# github_branch = "main"  # Branch to clone (default: main)
